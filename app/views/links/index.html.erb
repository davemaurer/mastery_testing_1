<h2>Hello, <%= current_user.email %> | <%= link_to "Logout", logout_path %></h2>

<div class="row">
  <div class="large-6 columns">
    <div class="card">
      <h3>Submit a Link</h3>
      <%= form_for @link do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :url %>
        <%= f.text_field :url %>
        <%= f.submit "Submit" %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-6 columns">
    <h2>Your Links</h2>
  </div>
</div>
