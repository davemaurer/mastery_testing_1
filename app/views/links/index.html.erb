<div class="row">
  <div class="large-8 columns">
  <h2>Hello, <%= current_user.email %> | <%= link_to "Logout", logout_path %></h2>
  </div>
</div>
<br>
<div class="row">
  <div class="large-8 columns">
    <div class="card">
      <h3>Submit a Link</h3>
      <%= form_for @link do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :url %>
        <%= f.text_field :url %>
        <%= f.submit "Submit", class: "button small round success" %>
      <% end %>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="large-8 columns">
    <h2>Your Links</h2>
    <% @links.each do |link| %>
      <ul class="no-bullet">
        <h4><%= link.title %> | <%= link.state %> |
            <%= link_to "Mark As Read", read_path(link), method: :put, class: "button round tiny" %> |
            <%= link_to "Mark As Unread", unread_path(link), method: :put, class: "button round tiny danger" %> |
            <%= link_to link.url, link.url %> |
        </h4>
      </ul>
  <% end %>
  </div>
</div>
